<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup"
    tools:context=".activities.SignUpActivity">

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="263dp"
        android:layout_height="76dp"
        android:layout_marginTop="184dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Please enter your user name:"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="263dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Please enter your password:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserName" />

    <EditText
        android:id="@+id/editTextRetype"
        android:layout_width="263dp"
        android:layout_height="76dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:hint="Retype your password:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

    <ImageView
        android:id="@+id/backToLogin"
        android:layout_width="52dp"
        android:layout_height="57dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/left_arrow_selector"
        app:layout_constraintEnd_toEndOf="@+id/editTextRetype"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/editTextRetype"
        app:layout_constraintTop_toBottomOf="@+id/editTextRetype" />


</androidx.constraintlayout.widget.ConstraintLayout>